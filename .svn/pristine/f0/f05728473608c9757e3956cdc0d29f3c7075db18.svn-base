<!-- 24.02.28 :: 첫번째 키워드에 커서 깜빡임 효과 추가 -->
<script>
  (function (win, doc) {
    'use strict';

    const wordWrap = doc.querySelector('.word-box-area');
    const wordInp = wordWrap.firstElementChild;
    const item = wordInp.querySelector('.input-word');

    item.addEventListener('input', (e) => {
      const _target = e.target;
      const _parent = _target.parentElement;
      
      _parent.classList.add('noBlink');
    })
    
  })(window, document);
</script>
