@charset "utf-8";

@mixin ellipsis($lines: 1) {
  @if ($lines==1) {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  } @else {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: $lines;
    -webkit-box-orient: vertical;
  }
}
@mixin clearfix{
  &:after{
    display:block;
    clear:both;
    content:'';
  }
}
@mixin text-hide{
  overflow: hidden;
  text-indent: -9999px;
  font-size: 0;
}