@charset "utf-8";

//GNB : SideNav.initModule();
.gnbOpenBtn{position:fixed;z-index:98;right:10px;top:5px;color:#333;font-size:22px;}
.gnbCloseBtn{position:absolute;right:15px;top:5px;color:#333;font-size:22px;} 

.gnb{display:none; position:fixed;z-index:99; left:0;top:0;right:0;bottom:0;background:#fff;}
.gnb.on{display:block;}
.gnb a{text-decoration:none;}

.gnbHead{background-color:#f5f5f5; padding-bottom:6px;
	.gnbTitle{position:relative;padding:10px;background-color:#fff;border-bottom:1px solid #ddd;}
	.gnbOption{}
}

.gnbNav{display:block;position:absolute;z-index:1; top:50px;bottom:0;left:0;width:120px;background-color:#1e282c;overflow:auto;
	li:first-child{margin-top:15px;}
	li a{display:block;padding:6px 10px;font-size:12px;font-weight:bold;color:#b8c7ce; text-decoration:none;}

	li.on a, li a:hover{color:#fff;}
}

.gnbCon{z-index:1;position:absolute;top:50px;bottom:0;left:120px;right:0;overflow:auto;
	.conWrap{margin:15px 0 0 10px;
		.title_2dep{padding:5px 0 3px 5px; font-size:14px;font-weight:bold;border-bottom:1px solid #1e282c;}
		.menuWrap{padding-left:0;}
		.title_3dep{padding:5px 0 3px 5px; font-size:12px;font-weight:bold;border-bottom:1px solid #ccc;}
		.menuWrap li a{display:block;color:#000;padding:4px 5px 3px;border-bottom:1px solid #eee; font-size:11px;}
		.menuWrap .menuWrap li a{padding-left:10px;}
		.menuWrap .menuWrap .menuWrap li a{padding-left:20px;}
	}
}


