//Excel Export
.table_export{position:relative; min-width:1400px; padding-top:30px;
	.btn_wrap{display: table;position: absolute; z-index: 9999; top: 0px; left: 0px;
    .chkall{display: table-cell; vertical-align: middle; margin-right:5px;}
    .btn_copy{position: absolute;left: 20px;top:-4px;}
	}

	.table_export_head{z-index:99;position:absolute; top:30px; left:0; right:17px;
		table.fixed{width: 100%;
			thead th{
				label{display: inline-block;vertical-align: top; margin-top: 2px;}
				label span{display:inline-block;padding-left: 5px; vertical-align:top; margin-top:-1px;}
				input[type="checkbox"]{}
			}
		}
	}

	.table_export_body{position:relative;max-height:calc(100vh - 260px);margin-top:0; padding-top:30px; overflow-y:auto; }
}

.mobile{
	//Excel Export
	.table_export{
		.table_export_head{right: 0;}
	}
}