<!DOCTYPE html>
<html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <style>
    .highlight {
      color:#000
    }
    .highlight2 {
      color:#fff;
    }
    section {
      height:calc(100vh - 50px);
      padding-top: 50px;
      background-color: pink;
      box-sizing: border-box;
    }
    section:nth-child(2n){
      background-color: greenyellow;
    }
    * {
      margin: 0;
      padding: 0;
    }
    header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 50px;
      font-size:40px;
      text-align: center;
      color:#000;
    }
    footer {
      height: 100px;
      background-color: gray;
    }
  </style>
</head>
<body>
  <header>asd</header>
  <section id="section1" class="target-section">
    Section 1
  </section>
  <section id="section2" class="target-section2">
    Section 2
  </section>
  <section id="section3" class="target-section">
    Section 3
  </section>
  <footer></footer>
  <script>
    $(document).ready(function() {
      function scrollEvent() {
        var header = $('header');
        var scrollPosition = $(window).scrollTop();

        $('.target-section').each(function() {
          var bounding = $(this).offset();
          if (bounding.top <= scrollPosition && bounding.top + $(this).height() > scrollPosition) {
            header.addClass('highlight');
          } else {
            header.removeClass('highlight');
          }
        });
        $('.target-section2').each(function() {
          var bounding = $(this).offset();
          if (bounding.top <= scrollPosition && bounding.top + $(this).height() > scrollPosition) {
            header.addClass('highlight2');
          } else {
            header.removeClass('highlight2');
          }
        });
      }

      $(window).on('scroll', function() {
        scrollEvent();
      });

      scrollEvent();
    });
  </script>
</body>
</html>
