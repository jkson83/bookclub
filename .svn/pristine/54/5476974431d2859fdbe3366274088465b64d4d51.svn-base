@charset "utf-8";


/*FooterMenu*/
.footMenu{z-index:10001;position:fixed; bottom:-100px; left:0; width:100%;border-top:1px solid #dedede;background-color:#fff;transition: all ease-in-out 0.3s; -webkit-transition:bottom ease-in-out 0.3s;
	&.on{display:block;bottom:0; transition: bottom ease-in-out 0.3s; -webkit-transition:bottom ease-in-out 0.3s;}

	// optionBar
	.optionBar{z-index:2;position:relative;background-color:#fff;padding:4px 0;
		.btn_area{margin:4px 8px;
			.btn_cbox, .btn{line-height:23px; color:#000;}
			a.btn_cbox{display:inline-block;border:0; padding:0; margin:0; overflow:visible;  background:url(../img/colorbox/controls.png) no-repeat 0px 0px; width:23px; height:23px; text-indent:-9999px;
				&:active {outline:0;}
				&.prev_btn{left:0px; background:url($svg-arrow-btn) center center no-repeat;
				}
				&.next_btn{left:27px; background:url($svg-arrow-btn) center center no-repeat;
					transform: rotate(180deg);
				}
				&.close_btn{right:0; background:url($svg-close-btn) center center no-repeat;
				}
				&.auto_btn{background:url($svg-play-btn) center center no-repeat;
					&:hover{background:url($svg-play-btn-over) center center no-repeat;}
					//pause
					&.on{background:url($svg-pause) center center no-repeat;}
					&.on:hover{background:url($svg-pause-over) center center no-repeat;}
				}
			}

			select#autoSelect{height: 23px; border: 1px solid #dedede;}
		}
		@media (max-width: 700px) {
			.btn_area.fl .link_btn{display:none;}
		}
		@media (max-width: 660px) {
			.info_area{display:inline-block;margin-right:10px;text-align:center;color:#000;font-weight:bold;}
		}
		@media (min-width: 661px) {
			.info_area{position:absolute; left:50%;width:100px;margin-left:-50px;margin-top:4px;text-align:center;color:#000;font-weight:bold;}
		}
	}

	// resizeBar
	.resizeBar{z-index:1;position:absolute;top:0px;width:100%;height:19px;background-color:#fff; border-top:1px solid #dedede;border-bottom:1px solid #dedede;box-sizing:border-box; transition: top ease-in-out 0.3s; -webkit-transition:top ease-in-out 0.3s;
		.control{position:relative;width:100%;text-align:center; 
			.bar{position:absolute; left:50%;height:17px;background-color:#dedede; box-sizing:border-box; border:1px solid #fff;
				&.on{background-color:#bdbdbd;}
			}
			.info_txt{position:absolute; left:50%;height:17px; color:#000;font-weight:bold;}
		}
		&.on{top:-19px;transition: top ease-in-out 0.3s; -webkit-transition:top ease-in-out 0.3s;}
	}
}
